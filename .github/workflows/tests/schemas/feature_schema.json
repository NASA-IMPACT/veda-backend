{
  "type": "object",
  "required": [
      "stac_version",
      "id",
      "type",
      "geometry",
      "bbox",
      "links",
      "properties",
      "assets"
    ],
  "properties": {
    "stac_version": {
        "type": "string"
    },
    "id": {
        "type": "string"
    },
    "type": {
        "type": "string"
    },
    "geometry": {
        "type": "object",
        "properties": {
            "type": {
                "type": "string",
                "coordinates": "array"
            }
        }
    },
      "bbox": {
          "type": "array"
      },

      "links": {
          "type": "array",
          "items": {
              "type": "object",
              "properties": {
                  "rel": {
                      "type": "string"
                  },
                  "type": {
                      "type": "string"
                  },
                  "href": {
                      "type": "string"
                  }
              }
          }
      },
      "assets": {
          "type": "object",
          "additionalProperties": {
            "required": ["href"],
            "properties": {
              "href": {
                  "type": "string",
                  "format": "url"
            },
            "description": {
              "type": "string"
           },
           "title": {
              "type": "string"
           },
           "type": {
              "type": "string"
           }
            }
          }
    },

      "collection": {
          "type": "string"
      },
      "properties": {
          "type": "object",
          "required": ["datetime"],
          "properties": {
            "datetime": {
                "type": "string",
                "format": "date-time",
                "nullable": "true"
            }
          }
      },
      "stac_extensions": {
          "type": "array"
      }
  }
}